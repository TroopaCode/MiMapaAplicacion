<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageViewMazatlan"
        android:layout_width="164dp"
        android:layout_height="184dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:onClick="mandarMapa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mazatlan" />

    <ImageView
        android:id="@+id/imageViewMonterrey"
        android:layout_width="168dp"
        android:layout_height="180dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="32dp"
        android:onClick="mandarMapa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.967"
        app:layout_constraintStart_toEndOf="@+id/imageViewMazatlan"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/monterrey" />

    <ImageView
        android:id="@+id/imageViewZacatecas"
        android:layout_width="170dp"
        android:layout_height="159dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="212dp"
        android:onClick="mandarMapa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMazatlan"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/zacatecas" />

    <ImageView
        android:id="@+id/imageViewChichenItza"
        android:layout_width="161dp"
        android:layout_height="161dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="212dp"
        android:onClick="mandarMapa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewZacatecas"
        app:layout_constraintTop_toBottomOf="@+id/imageViewMonterrey"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/chichenitza" />
</androidx.constraintlayout.widget.ConstraintLayout>